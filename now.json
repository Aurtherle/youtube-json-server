{
    "version": 2,
    "builds": [
        { "src": "playlist-items.js", "use": "@vercel/node" },
        { "src": "channel-broadcasts.js", "use": "@vercel/node" },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/info",
            "dest": "api/v1/yt-dlp.py"
        },
        {
            "src": "/api/version",
            "dest": "api/v1/yt-dlp.py"
        },
        {
            "src": "/playlist-items/(?<playlistId>[^/]*)",
            "headers": {"cache-control": "s-maxage=300, stale-while-revalidate"},
            "dest": "/playlist-items.js?id=$playlistId"
        },        {
            "src": "/channel-broadcasts/(?<channelId>[^/]*)",
            "headers": {"cache-control": "s-maxage=60, stale-while-revalidate"},
            "dest": "/channel-broadcasts.js?id=$channelId"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}